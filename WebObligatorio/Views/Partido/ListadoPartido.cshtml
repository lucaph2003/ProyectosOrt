@{
    ViewData["Title"] = "Partidos";
}
@using Dominio;
@model List<Partido>

<h1>Listado de partidos</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Fecha</th>
            <th scope="col">Seleccion 1</th>
            <th scope="col">Seleccion 2</th>
            <th scope="col">Finalizar Partido</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Partido partido in Model)
            {
                if (!partido.esFinalizada)
                {
                <tr>
                    <th scope="row">i</th>
                    <td>@partido.fechaHora</td>
                    <td>@partido.seleccion1.ToString()</td>
                    <td>@partido.seleccion2.ToString()</td>
                    <td>@Html.ActionLink("Finalizar", "Finalizar", "Partido", new { idPartido = partido.id })</td>

                </tr>
                }
            }
        }
    </tbody>
</table>