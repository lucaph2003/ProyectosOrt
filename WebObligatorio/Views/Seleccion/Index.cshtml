@{
    ViewData["Title"] = "Selecciones";
}
@using Dominio;
@model List<Seleccion>



<h1>Listado de Selecciones:</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre</th>
            <th scope="col">Plantel</th>
        </tr>
    </thead>

    @{
        foreach (Seleccion seleccion in Model)
        {
            <tr>
                <th scope="row">i</th>
                <td>@seleccion.pais.nombre</td>
                <td>@Html.ActionLink("Ver Jugadores", "Jugadores", "Seleccion", new {idPais = seleccion.pais.id })</td>
            </tr>
        }



    }
</table>
