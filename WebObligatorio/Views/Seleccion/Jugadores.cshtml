@{
    ViewData["Title"] = "Jugadores " + ViewBag.Pais.nombre;
}
@using Dominio;
@model List<Jugador>

<h1>Plantel de @ViewBag.Pais.nombre</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Dorsal</th>
            <th scope="col">Nombre Completo</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (Jugador jugador in Model)
            {
                <tr>
                    <th scope="row">i</th>
                    <td>@jugador.dorsal</td>
                    <td>@jugador.nombreCompleto </td>
                </tr>
            }
        }
        </tbody>
    </table>