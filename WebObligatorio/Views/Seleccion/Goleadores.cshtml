@{
    ViewData["Title"] = "Goleadores";
}
@using Dominio
@model List<Seleccion>

<h1>Goleadores</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre </th>
            <th scope="col">Goles </th>

        </tr>
    </thead>
    <tbody>
        @{
            foreach (Seleccion s in Model)
            {
                <tr>
                    <td>i</td>
                    <td>@s.pais.nombre</td>
                    <td>@ViewBag.Goles</td>
                </tr>
            }
        }
    </tbody>
</table>