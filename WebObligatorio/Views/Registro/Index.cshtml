@*
    
*@
@{
    ViewData["Title"] = "Registro";
}

<h3>Registro de Usuario</h3>

<form action="/Registro/Index" method="post">

    <div class="form-outline mb-4">
        <label class="form-label" for="nombre">Nombre</label>
        <input type="text" class="form-control" id="nombre" name="nombre" required />
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" for="apellido">Apellido</label>
        <input type="text" class="form-control" id="apellido" name="apellido" required />
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" for="email">Correo Electronico</label>
        <input type="email" class="form-control" id="email" name="email" required />
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" for="password">Contraseña</label>
        <input type="password" class="form-control" id="password" name="contrasena" required />
    </div>

    <div class="form-outline mb-4">
        <button type="submit" class="btn btn-primary btn-block mb-4">Registrarse</button>
    </div>

    @if (ViewBag.NombreError != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.NombreError
        </div>
    }

</form>


